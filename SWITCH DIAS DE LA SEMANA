#include <iostream>

using namespace std;
int main()

{
    char dia;
    cout << "INGRESE EL DIA DE LA SEMANA" << endl;
    cout << "Lunes (L) Martes (M) Miercoles (R) Jueves (J) Viernes (V)" <<endl;
    cin >> dia ;
    switch (dia)
    {
    case 'L' :
    cout <<" LUNES "<<endl<<endl;

    cout << " FUNDAMENTOS DE PROGRAMACION "     << endl;
    cout << " CALCULO DIFERENCIAL E INTEGRAL "  << endl;
    cout << " QUIMICA "                         << endl;
    break;

    case 'M' :
    cout << " MARTES "<<endl<<endl;

    cout << " BIOLOGIA "                        << endl;
    cout << " ALGEBRA LINEAL "                  << endl;
    cout << " METODOLOFIA DE LA INVESTIGACION " << endl;
    break;

    case 'R':
    cout << " MIERCOLES "<<endl<<endl;;

    cout << " FUNDAMENTOS DE PROGRAMACION "     << endl;
    cout << " CALCULO DIFERENCIAL E INTEGRAL "  << endl;
    cout << " QUIMICA "                         << endl;
    break;

    case 'J':
    cout <<" JUEVES "<<endl<<endl;

    cout << " BIOLOGIA "                        << endl;
    cout << " ALGEBRA LINEAL "                  << endl;
    cout << " METODOLOFIA DE LA INVESTIGACION " << endl;
    break;

    case 'V':
    cout << " VIERNES "<<endl<<endl;

    cout << " FUNDAMENTOS DE PROGRAMACION "     << endl;
    cout << " CALCULO DIFERENCIAL E INTEGRAL "  << endl;
    cout << " QUIMICA "                         << endl;
    break;

    }
    return 0;
}
