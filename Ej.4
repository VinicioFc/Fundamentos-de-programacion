#include <iostream>

using namespace std;

int main()
{
    float V,FP,I,PA,A;
    cout << " CALCULO DE LA INTENSIDAD (I) DE UN MOTOR " <<endl;
    cout << "INGRESE EL VALOR DEL VOLTAJE " <<endl;
    cin >> V ;
    cout << "INGRESE DE LA POTENCIA "       <<endl;
    cin >> PA;
    cout << "INGRESE DE FACTOR DE POTENCIA FP " <<endl;
    cin >> FP;
    if ( FP>0 , FP < 1 )
    {
    cout << " SELECCIONE : (1) EL MOTOR ES TRIFASICO  - SELECCIONE :( 2 ) SI ES DE  CORRIENTE DIRECTA (DC) " <<endl;
    cin>> A ;
    if (A == 1)
    {
    I=PA/(1.7 *(V) * (FP));
    cout << "LA INTESIDAD DEL MOTOR TRIFASICO ES " << I << endl;
    }
    else if ( A == 2 )
    {
    I=PA/V*FP;
    cout <<" LA INTESIDAD DEL MOTOR DC ES " << I << " A " << endl;
    }
    }
    else
    {
    cout << " !!! EL FACTOR DE POTENCIA FP ES INCORRECTOR !!! " <<endl;
    }

    return 0;
}
